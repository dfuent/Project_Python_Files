import pandas as pd
import os
import numpy as np


pd.set_option('display.max_rows', 500)

df = pd.read_csv('Transcripts_1980.csv')

df

overallwordcount1980 = pd.Series(' '.join(df.Transcript).split()).value_counts()[:200]
overallwordcount1980

#for Carter/Dems 1980; no VP debate in 1980
Dem1980 = df[df["Speaker_standardized"]=='Jimmy Carter']
Dem1980

#for Reagan/GOP in 1980, no VP debate
GOP1980 = df[df["Speaker_standardized"]=='Ronald Reagan']
GOP1980

GOP1980_nuclear = GOP1980.Transcript.str.count('NUCLEAR')
GOP1980_nuclear.sum()


Dem1980_nuclear = Dem1980.Transcript.str.count('NUCLEAR')
Dem1980_nuclear.sum()


