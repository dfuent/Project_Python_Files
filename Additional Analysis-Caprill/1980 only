Dem1980_armsrace.sum()


GOP1980_women = GOP1980.Transcript.str.count('WOMEN')
GOP1980_women.sum()


Dem1980_women = Dem1980.Transcript.str.count('WOMEN')
Dem1980_women.sum()


GOP1980_job = GOP1980.Transcript.str.count('JOB')
GOP1980_job.sum()


Dem1980_job = Dem1980.Transcript.str.count('JOB')
Dem1980_job.sum()


GOP1980_jobs = GOP1980.Transcript.str.count('JOBS')
GOP1980_jobs.sum()


Dem1980_jobs = Dem1980.Transcript.str.count('JOBS')
Dem1980_jobs.sum()


GOP1980_unemployment = GOP1980.Transcript.str.count('UNEMPLOYMENT')
GOP1980_unemployment.sum()


Dem1980_unemployment = Dem1980.Transcript.str.count('UNEMPLOYMENT')
Dem1980_unemployment.sum()


GOP1980_world = GOP1980.Transcript.str.count('WORLD')
