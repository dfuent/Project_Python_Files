#Begin 1980 debates
#October 28, 1980
Oct28_1980_debate = df[df["Debate"]=='October 28, 1980 Debate Transcript']
Oct28_1980_debate

#length test
len(Oct28_1980_debate)

#September 21, 1980 debate
Sept21_1980_debate = df[df["Debate"]=='September 21, 1980 Debate Transcript']
Sept21_1980_debate

#length test
len(Sept21_1980_debate)


debates_1980 = Oct28_1980_debate.append([Sept21_1980_debate])
debates_1980

#length test
len(debates_1980)

overallwordcount1980 = pd.Series(' '.join(df.Transcript).split()).value_counts()[:200]

#for Carter/Dems 1980; no VP debate in 1980
Carter80 = debates_1980[(debates_1980["Speaker_standardized"]=='Jimmy Carter')]
Carter80

#length test
len(Carter80)

#for Reagan/GOP in 1980, no VP debate
Reagan80 = debates_1980[(debates_1980["Speaker_standardized"]=='Ronald Reagan')]
Reagan80

#length test
len(Reagan80)

#for Anderson/Ind. 1980, no VP debate in 1980
Anderson80 = debates_1980[(debates_1980["Speaker_standardized"]=='John B. Anderson')]
Anderson80

#length test
len(Anderson80)

allcandidates80 = Anderson80.append([Reagan80, Carter80]) 
allcandidates80

#length test
len(allcandidates80)

allcandidates80_nuclear = allcandidates80.Transcript.str.count('NUCLEAR')
allcandidates80_nuclear.sum()

allcandidates80_atomic = allcandidates80.Transcript.str.count('ATOMIC')
allcandidates80_atomic.sum()

allcandidates80_proliferation = allcandidates80.Transcript.str.count('PROLIFERATION')
allcandidates80_proliferation.sum()

allcandidates80_nonproliferation = allcandidates80.Transcript.str.count('NONPROLIFERATION')
allcandidates80_nonproliferation.sum()

allcandidates80_non_proliferation = allcandidates80.Transcript.str.count('NON-PROLIFERATION')
allcandidates80_non_proliferation.sum()

