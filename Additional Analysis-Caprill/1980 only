Dem1980_proliferation.sum()


GOP1980_nonproliferation = GOP1980.Transcript.str.count('NONPROLIFERATION')
GOP1980_nonproliferation.sum()


Dem1980_nonproliferation = Dem1980.Transcript.str.count('NONPROLIFERATION')
Dem1980_nonproliferation.sum()


GOP1980_non_proliferation = GOP1980.Transcript.str.count('NON-PROLIFERATION')
GOP1980_non_proliferation.sum()



Dem1980_non_proliferation = Dem1980.Transcript.str.count('NON-PROLIFERATION')
Dem1980_non_proliferation.sum()


